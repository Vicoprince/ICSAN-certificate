    fetch('/total-approved')
        .then(response => response.json())
        .then(data => {
            document.getElementById('totalApproved').textContent = data.totalApproved;
        })
        .catch(error => console.error('Error:', error));
    
    fetch('/total-certificates')
        .then(response => response.json())
        .then(data => {
            document.getElementById('totalCertificates').textContent = data.totalCertificates;
        })
        .catch(error => console.error('Error:', error));
    
    fetch('/collected-certificates')
        .then(response => response.json())
        .then(data => {
            document.getElementById('collectedCertificates').textContent = data.collectedCertificates;
        })
        .catch(error => console.error('Error:', error));

</script>