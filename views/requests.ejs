<%- include("./partials/header.ejs") %>

<body class="sb-nav-fixed">
        <%- include("./partials/nav.ejs") %>
        <div id="layoutSidenav">
            <%- include('./partials/sidenav.ejs') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Requests</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Certification Requests</li>
                        </ol>
                        <%- include('./partials/cards.ejs') %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Certificate Request DataTable
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Membership Number</th>
                                            <th>Year Graduated</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Membership Number</th>
                                            <th>Year Graduated</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        
                                        <% if (request.length > 0) { %>
                                            <% request.forEach(request => { %>
                                                <!-- <a href="/requests/<%= request._id %>"> -->
                                                <tr>
                                                    <td><%= request.firstName %></td>
                                                    <td><%= request.lastName %></td>
                                                    <td><%= request.membershipNo %></td>
                                                    <td><%= request.yearGraduated %></td>
                                                    <td><%= request.category %></td>
                                                    <td><%= request.status %></td>
                                                    <td class="dropdown">
                                                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                            Action
                                                        </a>

                                                        <ul class="dropdown-menu">
                                                            <li><a class="dropdown-item" href="/request-approved/<%= request._id %>">Approve</a></li>
                                                            <li><a class="dropdown-item" href="/request-rejected/<%= request._id %>">Reject</a></li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                <!-- </a> -->
                                            <% }); %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
                <%- include('./partials/footer.ejs') %>
            </div>
        </div>
        <%- include('./partials/scripts.ejs') %>
    </body>
</html>
